<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_big_register"
        android:textColor="@color/colorPrimaryLight"
        android:textSize="@dimen/text_loginscreen_big_size" />

    <EditText
        android:id="@+id/etLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/edit_text_login_screen_margin"
        android:layout_marginStart="@dimen/edit_text_login_screen_margin"
        android:hint="@string/hint_login"
        android:inputType="text"
        android:textColor="@color/colorIcons"
        android:textColorHint="@color/colorPrimaryLight" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/edit_text_login_screen_margin"
        android:layout_marginStart="@dimen/edit_text_login_screen_margin"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:textColor="@color/colorIcons"
        android:textColorHint="@color/colorPrimaryLight" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/edit_text_login_screen_margin"
        android:layout_marginStart="@dimen/edit_text_login_screen_margin">

        <ProgressBar
            android:id="@+id/pbWait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnRegister"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_button_register" />
    </FrameLayout>
</LinearLayout>